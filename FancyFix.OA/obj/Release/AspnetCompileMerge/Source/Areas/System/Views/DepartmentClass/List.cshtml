@using FancyFix.OA.Model;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Mng_DepartmentClass> list = ViewBag.list;
    Mng_DepartmentClass mod = ViewBag.model;
    int id = ViewBag.id;
    int parId = ViewBag.parId;
    string path = ViewBag.path;
}
@section Css{
    <style>
        .table th {
            text-align: center;
            vertical-align: middle !important;
        }

        .cname {
            color: #367fa9;
            font-weight: bold;
        }

        a:hover {
            color: #f56954;
        }
    </style>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box-header">
            <h3 class="box-title">@(ViewBag.title)部门管理</h3>
        </div>
        <ol class="breadcrumb">
            <li>
                <a href="@path/list">一级分类</a>
            </li>
            @Html.Raw(ViewBag.breadcrumb)
        </ol>
        <div class="box">
            @if (id > 0)
            {
                <div class="box-body">
                    <form class="layui-form" method="post" action="@path/update">
                        <div class="form-inline">
                            <div class="form-group">
                                <input type="text" name="className" placeholder="添加同级部门" lay-verify="required" required="required" class="form-control pull-left" value="@(mod!=null?mod.ClassName:"")">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="id" value="@id">
                                <input type="hidden" name="parId" value="@parId">
                                <button type="submit" class="btn btn-sm btn-primary btn-flat pull-left" lay-submit lay-filter="formUpdate">修改</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
            <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover no-margin">
                        <thead>
                            <tr>
                                <th>部门名称(子部门数) </th>
                                <th>排序</th>
                                <th>锁定</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (list != null && list.Count > 0)
                            {
                                foreach (var item in list)
                                {
                                    <tr>
                                        <td align="center"><a class="cname" href="@path/list?parId=@item.Id">@item.ClassName</a>(@item.ChildNum)</td>
                                        <td align="center">
                                            @Html.Raw(item.actStr)
                                        </td>
                                        <td align="center">
                                            @if ((bool)item.BeLock)
                                            {
                                                <a href="@path/setbelock?id=@item.Id&parId=@parId" class="btn btn-success btn-circle btn-lg btn-xs" type="button">
                                                    <i class="fa fa-check"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@path/setbelock?id=@item.Id&parId=@parId" class="btn btn-danger btn-circle btn-lg btn-xs" type="button">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                            }
                                        </td>
                                        <td align="center">
                                            <a class="btn btn-warning btn-md" href="/system/permission/list?departId=@item.Id">岗位设置</a>
                                            <a class="btn btn-primary btn-md" href="@path/list?id=@item.Id&parId=@parId">编辑</a>
                                            <a class="btn btn-danger btn-md" href="@path/delete?id=@item.Id&parId=@parId">删除</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td height=25 colspan="5">此部门下暂且没有部门...</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="box-body">
                <form class="layui-form" method="post" action="@path/add">
                    <div class="form-inline">
                        <div class="form-group">
                            <input type="text" name="className" placeholder="添加同级部门" lay-verify="required" required="required" class="form-control pull-left">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="parId" value="@parId">
                            <button type="submit" class="btn btn-sm btn-primary btn-flat pull-left" lay-submit lay-filter="formAdd">添加</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Js{
    <script>
        layui.use('form', function () {
            var form = layui.form();
            //监听提交
            form.on('submit(formAdd),submit(formUpdate)', function (data) {
                return false;
            });
        });
    </script>
}
